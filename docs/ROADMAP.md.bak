### 10. üóÑÔ∏è Database Schema

```sql
-- Streaks
CREATE TABLE user_streaks (
    id UUID PRIMARY KEY,
    user_id UUID REFERENCES users(id),
    streak_type VARCHAR(50),
    current_streak INT DEFAULT 0,
    longest_streak INT DEFAULT 0,
    last_activity_date DATE,
    total_count INT DEFAULT 0,
    created_at TIMESTAMP,
    updated_at TIMESTAMP
);

-- Achievements
CREATE TABLE achievements (
    id UUID PRIMARY KEY,
    key VARCHAR(100) UNIQUE,
    title VARCHAR(200),
    description TEXT,
    icon VARCHAR(50),
    category VARCHAR(50),
    points INT,
    rarity VARCHAR(20),
    requirements JSON,
    created_at TIMESTAMP
);

CREATE TABLE user_achievements (
    id UUID PRIMARY KEY,
    user_id UUID REFERENCES users(id),
    achievement_id UUID REFERENCES achievements(id),
    unlocked_at TIMESTAMP,
    progress INT DEFAULT 0,
    UNIQUE(user_id, achievement_id)
);

-- Badges
CREATE TABLE badges (
    id UUID PRIMARY KEY,
    key VARCHAR(100) UNIQUE,
    title VARCHAR(200),
    description TEXT,
    icon VARCHAR(50),
    rarity VARCHAR(20),
    unlock_condition JSON,
    created_at TIMESTAMP
);

CREATE TABLE user_badges (
    id UUID PRIMARY KEY,
    user_id UUID REFERENCES users(id),
    badge_id UUID REFERENCES badges(id),
    is_displayed BOOLEAN DEFAULT FALSE,
    unlocked_at TIMESTAMP,
    UNIQUE(user_id, badge_id)
);

-- User Profile Extension
ALTER TABLE users ADD COLUMN level INT DEFAULT 1;
ALTER TABLE users ADD COLUMN xp INT DEFAULT 0;
ALTER TABLE users ADD COLUMN total_xp INT DEFAULT 0;

-- Daily Rewards
CREATE TABLE daily_rewards (
    id UUID PRIMARY KEY,
    user_id UUID REFERENCES users(id),
    date DATE,
    claimed BOOLEAN DEFAULT FALSE,
    reward_type VARCHAR(50),
    reward_value JSON,
    claimed_at TIMESTAMP,
    UNIQUE(user_id, date)
);

-- Challenges
CREATE TABLE challenges (
    id UUID PRIMARY KEY,
    title VARCHAR(200),
    description TEXT,
    start_date DATE,
    end_date DATE,
    goal JSON,
    reward_xp INT,
    reward_badge UUID REFERENCES badges(id),
    is_active BOOLEAN DEFAULT TRUE,
    created_at TIMESTAMP
);

CREATE TABLE user_challenges (
    id UUID PRIMARY KEY,
    user_id UUID REFERENCES users(id),
    challenge_id UUID REFERENCES challenges(id),
    progress INT DEFAULT 0,
    completed BOOLEAN DEFAULT FALSE,
    completed_at TIMESTAMP,
    UNIQUE(user_id, challenge_id)
);
```

